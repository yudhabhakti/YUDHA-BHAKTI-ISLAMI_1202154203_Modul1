<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.yudhabhaktiislami_1202154203_modul1.MainActivity">


    <TextView
        android:id="@+id/MakanMlm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makan Malam"
        android:textSize="20sp"
        android:textAlignment="center"
        android:paddingTop="40dp"   />



    <TextView
        android:id="@+id/DgMiliea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dengan Miliea"
        android:textAlignment="center"
        android:paddingTop="4dp"
        />

    <EditText
        android:id="@+id/Pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="20dp"
        android:text=""
        />

    <EditText
        android:id="@+id/Porsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_eatbus"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="EATBUS"
            android:layout_marginVertical="30dp"
            android:onClick="Eatbus"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btn_abnormal"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="ABNORMAL"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@android:color/background_light"
            android:layout_marginVertical="30dp"
            android:onClick="Abnormal"


            />
    </LinearLayout>
</LinearLayout>